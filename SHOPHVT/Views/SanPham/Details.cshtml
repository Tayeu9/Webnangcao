@model SanPham

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container body-content">
    <h2>Details</h2>

    <div>
        <h4>SanPham</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
               Tên sản phẩm
            </dt>

            <dd>
                @Html.DisplayFor(model => model.tenSanPham)
            </dd>

            <dt>
               Đơn giá
            </dt>

            <dd>
                @Html.DisplayFor(model => model.donGia)
            </dd>

            <dt>
               Số lượng
            </dt>

            <dd>
                @Html.DisplayFor(model => model.soLuong)
            </dd>

            <dt>
               Hình ảnh
            </dt>

            <dd>
                <img class="imgeql" src="~/images/@Html.DisplayFor(model => model.hinhAnh)" alt="Image" />
               
            </dd>

            <dt>
               Mô tả
            </dt>

            <dd>
                @Html.DisplayFor(model => model.moTa)
            </dd>

            <dt>
               Tên danh mục
            </dt>

            <dd>
                @Html.DisplayFor(model => model.DanhMuc.tenDanhMuc)
            </dd>

        </dl>
    </div>
    <p>
        @Html.ActionLink("Edit", "Edit", new { id = Model.sanPhamID }) |
        @Html.ActionLink("Back to List", "Index")
    </p>
</div>