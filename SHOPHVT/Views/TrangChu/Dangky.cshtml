@model KhachHang

@{
    ViewBag.Title = "Dangky";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container body-content">
    <div class="center" style="margin-bottom:20px">
        <h2>Đăng ký</h2>
    </div>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="row justify-content-center">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="col-md-7">
                <div class="form-group">
                    <div>Họ và tên</div>
                    @Html.EditorFor(model => model.hoTen, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.hoTen, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="col-md-7">
                <div class="form-group">
                    <div>Ngày sinh</div>
                    @Html.EditorFor(model => model.ngaySinh, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ngaySinh, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="col-md-7">
                <div class="form-group">
                    <div>Giới tính</div>
                    @Html.EditorFor(model => model.gioiTinh, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.gioiTinh, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="col-md-7">
                <div class="form-group">
                    <div>SDT</div>
                    @Html.EditorFor(model => model.soDienThoai, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.soDienThoai, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="col-md-7">
                <div class="form-group">
                    <div>Email</div>
                    @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="col-md-7">
                <div class="form-group">
                    <div>Địa chỉ</div>
                    @Html.EditorFor(model => model.diaChi, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.diaChi, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="col-md-7">
                <div class="form-group">
                    <div>Tên đăng nhập</div>
                    @Html.EditorFor(model => model.tenDangNhap, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.tenDangNhap, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="col-md-7">
                <div class="form-group">
                    <div>Mật khẩu</div>
                    @Html.EditorFor(model => model.matKhau, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.matKhau, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="col-md-7">
                <div class="form-group">
                    <input type="submit" value="Đăng ký" class="btn btn-primary" />
                    <a href="@Url.Action("Dangnhap", "TrangChu")" class="px-3">Đăng nhập</a>
                </div>
            </div>
        </div>
    }
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
