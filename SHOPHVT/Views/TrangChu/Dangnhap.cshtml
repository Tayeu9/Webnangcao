@model KhachHang

@{
    ViewBag.Title = "Đăng nhập";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container body-content">
    <div class="center" style="margin-bottom:20px">
        <h2>Đăng nhập</h2>
    </div>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="row justify-content-center">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="col-md-7">
                <div class="form-group">
                    <div class="">Email</div>
                    @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-md-7">
                <div class="form-group">
                    <div class="">Mật khẩu</div>
                    @Html.EditorFor(model => model.matKhau, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.matKhau, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-md-7">
                <div class="form-group">
                    <input type="submit" value="Đăng nhập" class="btn btn-primary px-3" width="200"/>
                    <a href="@Url.Action("Dangky", "TrangChu")" class="px-3">Đăng ký</a>
                </div>
            </div>
        </div>
        <h3>@ViewBag.Dangnhapfail</h3>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
