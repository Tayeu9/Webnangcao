@model KhachHang

@{
    ViewBag.Title = "Dangnhap";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container body-content">
    <div class="center" style="margin-bottom:20px">
        <h2>Đăng nhập</h2>
    </div>


    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal justify-content-center ">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })




            <div class="form-group justify-content-center align-items-center">
                <div class="control-label col-md-2 ">Email</div>

                <div class="col-md-7">

                    @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })


                </div>
            </div>

            <div class="form-group ">
                <div class="control-label col-md-2">Mật khẩu</div>
                <div class="col-md-7">

                    @Html.EditorFor(model => model.matKhau, new { htmlAttributes = new { @class = "form-control" } })

                    @Html.ValidationMessageFor(model => model.matKhau, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Đăng nhập" class="btn btn-primary" style="width=" 200px" />
                </div>
            </div>
        </div>
        <h3>@ViewBag.Dangnhapfail</h3>
    }

    <div>
        @Html.ActionLink("Đăng ký", "Dangky")
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
