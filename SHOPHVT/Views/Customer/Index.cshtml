
@{
    ViewBag.Title = "Index";
}


    <div class="hero-wrap hero-bread" style="background-image: url('../images/bg_1.jpg');">
        <div class="container">
            <div class="row no-gutters slider-text align-items-center justify-content-center">
                <div class="col-md-9 ftco-animate text-center">
                    <p class="breadcrumbs"><span class="mr-2"><a href="@Url.Action("", "TrangChu")">Trang chủ</a></span> <span>Tài khoản</span></p>
                    <h1 class="mb-0 bread">Thông tin cá nhân</h1>
                </div>
            </div>
        </div>
    </div>

    @model SHOPHVT.Models.Customer
    <section class="ftco-section contact-section bg-light">
        <div class="container">
            <div class="row mb-3 d-flex contact-info">
                <div class="w-100"></div>
                <div class="col-md-3 d-flex">
                    <div class="info bg-white p-4">
                        <p style="color: #000000"><span>Họ và tên:</span><br />@Model.FullName</p>
                    </div>
                </div>
                <div class="col-md-3 d-flex">
                    <div class="info bg-white p-4">
                        <p style="color: #000000"><span>Ngày sinh:</span><br />@Model.Birthday.ToString("dd/MM/yyyy")</p>
                    </div>
                </div>
                <div class="col-md-3 d-flex">
                    <div class="info bg-white p-4">
                        <p style="color: #000000"><span>Giới tính:</span><br />@Model.Gender</p>
                    </div>
                </div>
                <div class="col-md-3 d-flex">
                    <div class="info bg-white p-4">
                        <p style="color: #000000"><span>Địa chỉ</span><br />@Model.Address</p>
                    </div>
                </div>
            </div>
            <div class="row mb-3 d-flex contact-info">
                <div class="w-100"></div>
                <div class="col-md-3 d-flex">
                    <div class="info bg-white p-4">
                        <p style="color: #000000"><span>Email:</span><br />@Model.Email</p>
                    </div>
                </div>
                <div class="col-md-3 d-flex">
                    <div class="info bg-white p-4">
                        <p style="color: #000000"><span>Số điện thoại:</span><br />@Model.PhoneNumber</p>
                    </div>
                </div>
                <div class="col-md-3 d-flex">
                    <div class="info bg-white p-4">
                        <p style="color: #000000"><span>Tên đăng nhập:</span><br />@Model.Username</p>
                    </div>
                </div>
                <div class="col-md-3 d-flex">
                    <div class="info bg-white p-4">
                        <p style="color: #000000"><span>Mật khẩu:</span><br />@Model.HiddenPassword</p>
                    </div>
                </div>
            </div>

            <div class="row mb-3 d-flex contact-info justify-content-center">
                <div class="col-md-6 d-flex">
                    @Html.ActionLink("Cập nhật mật khẩu", "UpdatePassword", "Customer", null, new { @class = "info btn btn-primary py-2 px-3" })
                </div>
                <div class="col-md-6 d-flex">
                    @Html.ActionLink("Cập nhật thông tin tài khoản", "Update", "Customer", null, new { @class = "info btn btn-primary py-2 px-3" })
                </div>
            </div>
        </div>
    </section>
