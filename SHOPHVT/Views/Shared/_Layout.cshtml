                    {
                        <li class="nav-item"><a href="@Url.Action("Dangnhap", "TrangChu")" class="nav-link">Đăng nhập</a></li>
                    }


                    <li class="nav-item cta cta-colored">
                        <a href="@Url.Action("Index", "Cart")" class="nav-link @Html.IsActive("Index", "Cart")"><span class="icon-shopping_cart"></span>[0]</a>
                    </li>

                </ul>
            </div>
        </div>
