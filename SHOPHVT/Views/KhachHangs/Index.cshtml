@model IEnumerable<SHOPHVT.KhachHang>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="center texta" style="margin-bottom:20px">
    <h2>Quản lý khách hàng</h2>
</div>

<div class="center texta btb">
    @Html.ActionLink("Thêm mới khách hàng", "Create", new { @class = "btn btn-primary col-md-offset-2 col-md-10 btb center" })
</div>
<table class="table">
    <tr>
        <th>
           Họ tên
        </th>
        <th>
          Ngày sinh
        </th>
        <th>
           Giới tính
        </th>
        <th>
           Email
        </th>
        <th>
           Địa chỉ
        </th>
        <th>
           Tên đăng nhập
        </th>
        <th>
           Mật khẩu
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.hoTen)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ngaySinh)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.gioiTinh)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.diaChi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tenDangNhap)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.matKhau)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.khachHangID }, new { @class = "btn btn-primary col-md-offset-2 col-md-10 btb " })
                @Html.ActionLink("Details", "Details", new { id = item.khachHangID }, new { @class = "btn btn-primary col-md-offset-2 col-md-10 btb " })
                @Html.ActionLink("Delete", "Delete", new { id = item.khachHangID }, new { @class = "btn btn-primary col-md-offset-2 col-md-10 btb " })
            </td>
        </tr>
    }

</table>
